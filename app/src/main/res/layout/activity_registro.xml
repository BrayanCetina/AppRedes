<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro">

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="180dp"
      android:layout_height="127dp"
      android:layout_marginTop="44dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.45"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@mipmap/ic_launcher" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Folio:"
      app:layout_constraintBottom_toBottomOf="@+id/txtApe"
      app:layout_constraintEnd_toStartOf="@+id/txtApe" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Usuario:"
      app:layout_constraintBottom_toBottomOf="@+id/txtCorreo"
      app:layout_constraintEnd_toStartOf="@+id/txtCorreo" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="1dp"
      android:text="Contraseña:"
      app:layout_constraintBottom_toBottomOf="@+id/txtPass1"
      app:layout_constraintEnd_toStartOf="@+id/txtPass1" />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="1dp"
      android:text="Contraseña:"
      app:layout_constraintBottom_toBottomOf="@+id/txtPass2"
      app:layout_constraintEnd_toStartOf="@+id/txtPass2" />

  <EditText
      android:id="@+id/txtCorreo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:ems="10"
      android:inputType="textEmailAddress"
      app:layout_constraintStart_toStartOf="@+id/txtApe"
      app:layout_constraintTop_toBottomOf="@+id/txtApe" />

  <EditText
      android:id="@+id/txtPass1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:ems="10"
      android:inputType="textPassword"
      app:layout_constraintStart_toStartOf="@+id/txtCorreo"
      app:layout_constraintTop_toBottomOf="@+id/txtCorreo" />

  <EditText
      android:id="@+id/txtPass2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="3dp"
      android:ems="10"
      android:inputType="textPassword"
      app:layout_constraintStart_toStartOf="@+id/txtPass1"
      app:layout_constraintTop_toBottomOf="@+id/txtPass1" />

  <EditText
      android:id="@+id/txtApe"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="71dp"
      android:layout_marginEnd="43dp"
      android:ems="10"
      android:inputType="textPersonName"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView" />

  <Button
      android:id="@+id/button2"
      android:layout_width="0dp"
      android:layout_height="46dp"
      android:layout_marginStart="17dp"
      android:layout_marginEnd="11dp"
      android:onClick="Cancelar"
      android:text="Cancelar"
      app:layout_constraintBaseline_toBaselineOf="@+id/button7"
      app:layout_constraintEnd_toEndOf="@+id/txtPass2"
      app:layout_constraintStart_toEndOf="@+id/button7" />

  <Button
      android:id="@+id/button7"
      android:layout_width="125dp"
      android:layout_height="46dp"
      android:layout_marginStart="12dp"
      android:layout_marginTop="23dp"
      android:onClick="RegistrarNuevoUsuario"
      android:text="Aceptar"
      app:layout_constraintStart_toStartOf="@+id/textView6"
      app:layout_constraintTop_toBottomOf="@+id/txtPass2" />

</androidx.constraintlayout.widget.ConstraintLayout>